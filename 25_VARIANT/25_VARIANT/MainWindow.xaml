<Window x:Class="_25_VARIANT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_25_VARIANT"
        mc:Ignorable="d"
        Height="660" Width="883">
    <Grid>
        <Label Content="Расчет стоимости телефонных разговоров" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Количество минут" HorizontalAlignment="Left" Margin="28,88,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="minutesTextbox" HorizontalAlignment="Left" Margin="156,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <RadioButton Content="Тариф1: за разговоры до 200 минут в месяц – 0.7 руб., а разговоры сверх установленной нормы оплачиваются 1.6 руб. за минуту. " HorizontalAlignment="Left" Margin="28,142,0,0" VerticalAlignment="Top" Height="33" Width="742"/>
        <RadioButton Content="Тариф2: за разговоры до 100 минут в месяц – 0.3 руб., а разговоры сверх установленной нормы оплачиваются 1.6 руб. за минуту. " HorizontalAlignment="Left" Margin="28,180,0,0" VerticalAlignment="Top" Height="33" Width="742"/>
        <Button x:Name="rschitatButton" Content="Рассчитать" HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" Height="51" Width="185" Click="rschitatButton_Click" />
        <Button x:Name="checkButton" Content="СФормировать квитанцию" HorizontalAlignment="Center" Margin="0,461,0,0" VerticalAlignment="Top" Height="51" Width="185" Click="checkButton_Click" />
        <Label x:Name="resultOrderLabel" Content="Сумма к оплате: " HorizontalAlignment="Left" Margin="107,339,0,0" VerticalAlignment="Top"/>
        <Label x:Name="countMinutesLabel" Content="Количество минут сверх нормы: " HorizontalAlignment="Left" Margin="107,370,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
